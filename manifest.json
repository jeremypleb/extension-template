{
    "manifest_version": 2,
    "name": "Extension Template",
    "version": "1.0.0",

    "description": "A basic Browser Extension template that shows how to structure and use various features of an extension",

    "icons": {
        "48": "icons/example-48.svg",
        "96": "icons/example.svg"
    },

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "browser_action": {
        "default_icon": "icons/example-48.svg"
    },

    "permissions": [
        "activeTab",
        "tabs"
    ]
}